{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
